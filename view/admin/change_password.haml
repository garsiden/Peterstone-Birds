/ form to change user's password
%form{:action => route(:change_password, :user_id=>@pwd_user.user_id), :id=>'change_user',
  :method=>'post'}
  %fieldset
    %legend= @legend
    %label{:for=>'password'} 
      %b Password
    %input{:type=>'password', :id=>'new_password', :name=>'new_password'}
    %br
    %label{:for=>'password_confirmation'} 
      %b Confirm Password
    %input{:type=>'password', :id=>'password_confirmation', :name=>'password_confirmation'}
    %script{:type=>'text/javascript'}
      var conf = new LiveValidation('password_confirmation',
      {validMessage: " ", onlyOnSubmit: true} );
      conf.add(Validate.Confirmation,
      {match: 'new_password', failureMessage: "Passwords do not match"} );
    %br
    %br
    %input{:type=>'submit', :value=>@submit}
#{flashbox}
/ end of change password form
