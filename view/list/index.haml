-# index.hml - ListController default view
%report
  %table.listing{:summary => @title}
    %thead
      %tr
        %th Code
        %th Species Name
        %th Scientific Name
      %tbody
      - Species.order(:name).each do |s|
        %tr{:class => cycle}
          %td= s.bto_code
          %td= s.name
          %td= s.scientific_name

