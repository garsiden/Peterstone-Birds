/ form to edit observation
%form{:action=>'', :id=>'edit_list', :method=>'post', :title=>@title}
  %fieldset
    %legend
      #{@legend}
    %label{:for=>'code'}
      Code:
    %input{:type => 'text', :id => 'code', :size => 6, :maxlength => '2',
      :value=>@ob.bto_code}
    %label{:for=>'first_date'}
      Date:
    %input{:type => 'text', :id=>'first_date', :name => 'first_date',
      :value => @ob.first_date}
    %br
    %label{:for=>'note'}
      Note:
    %br
    %textarea{:name=>'note', :id=>'note', :rows=>10, :cols=>40}
      #{h(@ob.note).gsub("\n", '')}
    %br
    %br
    %div
      %input{:type=>'submit', :value=>@submit}
      %input{:type=>'reset'}
      %button{:type=>'button', :name=>'Cancel', :value=>'Cancel',
        :onclick=> "window.location='#{ListController.r(user.login)}'"}
        Cancel
/ end observation form        
