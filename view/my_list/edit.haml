/ form to edit observation
%form{:action=>"#{r(:edit)}", :id=>'edit_list', :method=>'post', :title=>@title}
  %fieldset
    %legend
      #{@legend}
    %label{:for=>'code'}
      %b Code
    %input{:type => 'text', :id => 'code', :name => 'bto_code',
    :size => 6, :maxlength => '2', :value=>@ob.bto_code}
    %label{:for=>'first_date'}
      %b Date
      (yyyy-mm-dd)
    %input{:type => 'text', :id=>'first_date', :name => 'first_date',
      :value => @ob.first_date}
    %input{:type=>'button', :value=>'change date',
      :onclick=>"displayCalendar(document.forms[0].first_date, 'yyyy-mm-dd', this)" }
    %br
    %label{:for=>'note'}
      Note
    %textarea{:name=>'note', :id=>'note', :rows=>10, :cols=>35}
      #{h(@ob.note).gsub("\n", '')}
    %br
    %br
    %div
      %input{:type=>'submit', :value=>@submit}
      %input{:type=>'reset'}
      %button{:type=>'button', :name=>'Cancel', :value=>'Cancel',
        :onclick=> "window.location='#{MyListController.r(user.login)}'"}
        Cancel
/ end observation form        
